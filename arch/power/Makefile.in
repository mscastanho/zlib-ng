CC=
CFLAGS=
SFLAGS=
INCLUDES=
SUFFIX=

SRCDIR=.
SRCTOP=../..
TOPDIR=$(SRCTOP)

P8FLAGS=-mcpu=power8
P9FLAGS=-mcpu=power9

all: compare258_power9.o \
     compare258_power9.lo \
     power.o \
     power.lo \
     slide_hash_power8.o \
     slide_hash_power8.lo

compare258_power9.o:
	$(CC) $(CFLAGS) $(P9FLAGS) $(INCLUDES) -c -o $@ $(SRCDIR)/compare258_power9.c

compare258_power9.lo:
	$(CC) $(SFLAGS) $(P9FLAGS) $(INCLUDES) -c -o $@ $(SRCDIR)/compare258_power9.c

power.o:
	$(CC) $(CFLAGS) $(INCLUDES) -c -o $@ $(SRCDIR)/power.c

power.lo:
	$(CC) $(SFLAGS) $(INCLUDES) -c -o $@ $(SRCDIR)/power.c

slide_hash_power8.o:
	$(CC) $(CFLAGS) $(P8FLAGS) $(INCLUDES) -c -o $@ $(SRCDIR)/slide_hash_power8.c

slide_hash_power8.lo:
	$(CC) $(SFLAGS) $(P8FLAGS) $(INCLUDES) -c -o $@ $(SRCDIR)/slide_hash_power8.c

mostlyclean: clean
clean:
	rm -f *.o *.lo *~
	rm -rf objs
	rm -f *.gcda *.gcno *.gcov

distclean:
	rm -f Makefile
